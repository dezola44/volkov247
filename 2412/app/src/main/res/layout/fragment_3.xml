<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Задание 3: Стоимость конфет"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Исходные данные:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="X (кг):"
            android:textSize="15sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/inputX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите количество конфет в кг"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A (руб.):"
            android:textSize="15sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/inputA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите стоимость в рублях"
            android:inputType="numberDecimal"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Y (кг):"
            android:textSize="15sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/inputY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите нужное количество в кг"
            android:inputType="numberDecimal"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="РАССЧИТАТЬ СТОИМОСТЬ"
            android:layout_marginBottom="32dp"
            android:padding="16dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/resultPricePerKg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Цена за 1 кг: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/resultPriceForY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Цена за Y кг: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:id="@+id/formulaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:lineSpacingExtra="6dp"
            android:padding="16dp"/>

    </LinearLayout>
</ScrollView>