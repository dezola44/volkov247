<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.zelmex.prac53.controller.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="X кг конфет:"/>
    <TextField fx:id="xField"/>

    <Label text="Стоит A рублей:"/>
    <TextField fx:id="aField"/>

    <Label text="Y кг (сколько нужно):"/>
    <TextField fx:id="yField"/>

    <Button text="Вычислить" onAction="#calculate"/>

    <Label fx:id="resultLabel"/>
</VBox>