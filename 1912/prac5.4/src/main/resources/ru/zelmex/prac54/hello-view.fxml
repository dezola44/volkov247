<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.zelmex.prac54.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="a:"/>
    <TextField fx:id="aField"/>

    <Label text="x:"/>
    <TextField fx:id="xField"/>

    <Label text="c:"/>
    <TextField fx:id="cField"/>

    <Label text="w:"/>
    <TextField fx:id="wField"/>

    <Label text="t:"/>
    <TextField fx:id="tField"/>

    <Button text="Вычислить" onAction="#calculate"/>

    <Label fx:id="resultLabel"/>
</VBox>
